#!/bin/bash

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# 检查当前分支
BRANCH=$(git symbolic-ref --short HEAD)
echo -e "${BLUE}[PRE-COMMIT]${NC} 当前分支: $BRANCH"

# 检查是否有Go文件变更
if git diff --cached --quiet -- '*.go'; then
    echo -e "${YELLOW}[PRE-COMMIT]${NC} 未检测到 Go 文件变更"
else
    echo -e "${GREEN}[PRE-COMMIT]${NC} 检测到 Go 文件变更"
fi

# 可以在这里添加其他检查，比如：
# - 代码格式检查
# - 单元测试
# - 静态分析等

echo -e "${GREEN}[PRE-COMMIT]${NC} 所有检查通过，准备提交"
exit 0